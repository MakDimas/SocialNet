.settings-main
  position relative
  width 100vw
  left 0
  min-height 100vh
  padding 24px
  background-color #eef2f7

.settings-content
  background #fff
  border-radius 20px
  box-shadow 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff
  min-height calc(100vh - 48px)

.settings-up-panel
  display flex
  justify-content space-between
  align-items center
  width 95%
  margin 16px auto 0
  padding 16px 18px
  background #fff
  border-radius 16px
  box-shadow 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff

.settings-back-link
  display inline-flex
  align-items center
  justify-content center
  padding 12px 18px
  height 44px
  min-width 140px
  background #5b21b6
  color #fff
  border none
  border-radius 12px
  font-weight 800
  font-size 14px
  letter-spacing .5px
  box-shadow 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff
  cursor pointer
  text-decoration none

.settings-card
  margin 18px auto
  padding 24px
  width 95%
  max-width 900px
  background #fff
  border-radius 16px
  box-shadow 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff

.settings-title
  font-size 28px
  font-weight 800
  color #111827
  margin-bottom 16px

.settings-form
  display flex
  flex-direction column
  gap 14px

.settings-form-row
  display flex
  flex-direction column

.settings-form-label
  font-weight 700
  color #111827
  margin-bottom 6px

.settings-form-input
  width 100%
  height 44px
  padding 0 14px
  font-size 14px
  border none
  outline none
  background-color #eef2f7
  border-radius 10px
  box-shadow inset 2px 2px 4px #d1d9e6, inset -2px -2px 4px #ffffff

.settings-form-input.invalid
  box-shadow 0 0 0 2px #e3363c inset

.settings-form-textarea
  width 100%
  padding 12px 14px
  font-size 14px
  border none
  outline none
  background-color #eef2f7
  border-radius 12px
  box-shadow inset 2px 2px 4px #d1d9e6, inset -2px -2px 4px #ffffff
  resize vertical
  max-width 100%

.settings-input-error
  color #b91c1c
  font-weight 700
  font-size 12px
  margin-top 4px

.settings-form-actions
  display flex
  justify-content flex-end
  gap 12px
  margin-top 8px

.settings-primary-button
  display inline-flex
  align-items center
  justify-content center
  padding 12px 18px
  height 44px
  min-width 160px
  background #5b21b6
  color #fff
  border none
  border-radius 12px
  font-weight 800
  font-size 14px
  letter-spacing .5px
  box-shadow 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff
  cursor pointer

.settings-secondary-button
  display inline-flex
  align-items center
  justify-content center
  padding 12px 18px
  height 44px
  min-width 120px
  background #111827
  color #fff
  border none
  border-radius 12px
  font-weight 800
  font-size 14px
  letter-spacing .5px
  box-shadow 8px 8px 16px #d1d9e6, -8px -8px 16px #ffffff
  cursor pointer
  